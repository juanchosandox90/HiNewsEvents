<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    android:id="@+id/host_layout"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.profile.LibraryFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <Button
            android:id="@+id/button_bookmarks"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Bookmarks"
            android:textAllCaps="false"
            android:textSize="20sp"
            android:visibility="visible"
            android:drawableLeft="@drawable/ic_action_bookmark"
            android:drawableRight="@drawable/ic_action_right_arrow"/>

        <Button
            android:id="@+id/button_downloads"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Downloads"
            android:textAllCaps="false"
            android:textSize="20sp"
            android:visibility="gone"
            android:drawableLeft="@drawable/ic_action_download"
            android:drawableRight="@drawable/ic_action_right_arrow"/>
    </LinearLayout>

</FrameLayout>