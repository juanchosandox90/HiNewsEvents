<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    android:id="@+id/host_layout"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.profile.LibraryFragment">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        app:cardCornerRadius="12dp"
        app:cardElevation="12dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:orientation="vertical">
        <Button
            android:id="@+id/button_bookmarks"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Bookmarks"
            android:textAllCaps="false"
            android:textSize="20sp"
            android:visibility="visible"
            android:layout_margin="8dp"
            android:paddingStart="8dp"
            android:paddingEnd="8dp"
            android:textColor="@color/whiteBG"
            android:background="@drawable/bg_blue_sq"
            android:clickable="true"
            android:focusable="true"
            android:foreground="?android:attr/selectableItemBackground"
            android:drawableLeft="@drawable/ic_action_bookmark"
            android:drawableRight="@drawable/ic_action_right_arrow"/>

        <Button
            android:id="@+id/button_downloads"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Downloads"
            android:textAllCaps="false"
            android:textSize="20sp"
            android:visibility="visible"
            android:layout_margin="8dp"
            android:paddingStart="8dp"
            android:paddingEnd="8dp"
            android:textColor="@color/whiteBG"
            android:background="@drawable/bg_green_sq"
            android:clickable="true"
            android:focusable="true"
            android:foreground="?android:attr/selectableItemBackground"
            android:drawableLeft="@drawable/ic_action_download"
            android:drawableRight="@drawable/ic_action_right_arrow"/>
    </LinearLayout>

    </androidx.cardview.widget.CardView>

</FrameLayout>